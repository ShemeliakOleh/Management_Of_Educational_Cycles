@page
@model Management_Of_Educational_Cycles.View.Pages.Teachers.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <table class="myTable table hover" id="myTable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TeacherDisplayViewModel.Disciplines[0].DisciplineName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TeacherDisplayViewModel.Disciplines[0].LectureHours)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TeacherDisplayViewModel.Disciplines[0].LaboratorHours)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TeacherDisplayViewModel.Disciplines[0].SeminarHours)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TeacherDisplayViewModel.Disciplines[0].TotalHours)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.TeacherDisplayViewModel.Disciplines)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DisciplineName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LectureHours)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LaboratorHours)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SeminarHours)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalHours)
                </td>

            </tr>
            }
        </tbody>
    </table>
</div>
<div>
    
    <a asp-page="./Index">Back to List</a>
</div>
