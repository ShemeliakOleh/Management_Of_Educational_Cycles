    ViewData["Title"] = "Index";
}


<p>
    <a asp-page="Create">Створити новий</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EducationalCycles[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EducationalCycles[0].Discipline)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EducationalCycles[0].Group)
