@page
@model Management_Of_Educational_Cycles.View.Pages.Faculties.IndexModel

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="~/css/paginate.css">
<link rel="stylesheet" href="~/css/">
<script type="text/javascript" src="~/js/paginate.js"></script>
<script type="text/javascript" src="~/js/paginateOptions.js"></script>
<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<form method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(model => model.FacultiesFilter.FacultyName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.FacultiesFilter.FacultyName,
              new { htmlAttributes = new { @class = "form-control" } })

        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Find" class="btn btn-primary" />
        </div>
    </div>
</form>
<div class="panel">
    <div class="body">
        <div class="input-group">
            <input type="search" id="searchBox" placeholder="Filtrar..." hidden="hidden">
        </div>
    </div>
</div>
<table class="myTable table hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FacultiesFilter.Faculties[0].Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.FacultiesFilter.Faculties) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<script>
    let options = {
        numberPerPage: 11,
        goBar: true,
        pageCounter: true,
    };

    let filterOptions = {
        el: '#searchBox'
    };

    paginate.init('.myTable', options, filterOptions);
</script>